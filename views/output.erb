
<h4>Add an item to the list:</h4>

<form action="/" method="post">
  <div class="form-group">
    <label for="name">Name</label>
    <input id="name" name="name" class="form-control" type="text">
    <label for="rank">Rank</label>
    <input id="rank" name="rank" class="form-control" type="text">
  </div>
  <button type="submit" class="btn">Go!</button>
</form>

<h2>List of favorite things</h2>
<div class="form-group">
  <div class="row">
    <div class="col-sm-6">
      <div class="list">
        <% @list.each do |item| %>
          <h4><a href="/items/<%= item.id %>"><%= item.name %></a></h4>
        <% end %>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="list">
        <% @list.each do |item| %>
          <h4><a href="/items/<%= item.id %>"><%= item.rank %></a></h4>
        <% end %>
      </div>
    </div>
  </div>
</div>
